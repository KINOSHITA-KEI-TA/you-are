.AccountPage
  .AccountPage__title
    %h2 アカウント作成
    %h5 新規アカウントの作成
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :お名前
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :学校名
        .FormField__input--normal
          = f.text_field :school_name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :Eメール
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :パスワード
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :確認用パスワード
        .FormField__input--normal
          = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "新規登録", class: 'Button UserButton'
      = link_to "/comments",class:"top-enter" do
        はじめにもどる
